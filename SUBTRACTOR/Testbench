`timescale 1ns / 1ps

module subtractor_tb();
reg A, B, Bin;
wire Diff, Borrow;
subtractor uut(.A(A), .B(B), .Bin(Bin), .Diff(Diff), .Borrow(Borrow));
initial begin
$monitor("Time = %0t | A = %b, B = %b, Bin = %b | Diff = %b, Borrow = %b", $time, A, B, Bin ,Diff, Borrow);
for (integer i = 0; i <8; i = i+1) begin
    {A, B, Bin} = i[2:0];
    #10;
end
end
endmodule
